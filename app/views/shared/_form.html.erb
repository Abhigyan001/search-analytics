<div class='form-container'>
  <%= form_with url: articles_search_path, authenticity_token: false, method: :post, data: { controller: "search", search_target: "form", turbo_frame: "articles" } do |form| %>
    <%= image_tag "search-icon.jpg", class: "search-icon" %>
    <%= form.text_field :query,
      placeholder: "Enter your query ....",
      autocomplete: "off",
      class: "search-form",
      data: { action: "input->search#querySearch" }
    %>
  <% end %>
</div>
